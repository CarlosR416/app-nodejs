<!DOCTYPE html>
<html>
<head>
    <!-- head partial -->
    <%- include('../partials/head.ejs') %>
    <!-- //////////////////////// -->

</head>
<body>
    
    <!-- header partial-->
    <%- include('../partials/header.ejs') %>
    <!-- //////////////////////// -->

    <main id="main">

        <section class="single-post-content contact">
          <div class="container">
            <div class="row">
              <div class="col-md-9 post-content" data-aos="fade-up">
                
                <div class="form  mb-3">
                    <form action="/productos" method="get" role="form" class="php-email-form">
                      <div class="row">
                        <div class="form-group">
                          <input type="text" name="s" class="form-control" id="s" placeholder="Buscador" required>
                        </div>
                      </div>
                      
                      <div class="text-center"><button type="submit">Buscar</button></div>
                      <div class="text-center my-3"><a href="/productos" class="">Limpiar Buscador</a></div>
                    </form>
                </div><!-- End Form --> 
                <div class="row g-5">
                    <% productos.forEach(column => { %>
                        <div class="col-lg-4 custom-border">
                                <div class="post-entry-1">
                                    <a href="single-post.html"><img src="<%= column.imagen_src? column.imagen_src: '/productos/imagenes/sin_imagen.svg'; %>" alt="" class="img-fluid" ></a>
                                    <div class="post-meta"><span class="date">Ref: <%= column.precio %></span> </div>
                                    <h2><a href="single-post.html"><%= column.descripcion %></a></h2>
                                    <a href="#" class="btn btn-primary"> Mas Informaci√≥n</a>
                                </div>
                        </div>
                    <% }); %> 

                    <% if(productos.length == 0){ %>
                      <div class="text-center my-8"><h3 href="/productos" class="">Sin resultados</h3></div>
                    <% } %>
                </div>
              </div>
              <div class="col-md-3">
                <!-- ======= Sidebar ======= -->
                
                <div class="aside-block">
                  <h3 class="aside-title">Categorias</h3>
                  <ul class="aside-links list-unstyled">
                    <% categorias.forEach(categoria => { %>
                      <li><a href="/productos?c=<%= categoria.id %>"><i class="bi bi-chevron-right"></i> <%= categoria.descripcion.toUpperCase() %></a></li>
                    <% }) %>
                    
                  </ul>
                </div><!-- End Categories -->
    
                
              </div>
            </div>
          </div>
        </section>
      </main><!-- End #main -->

    <!-- footer partial-->
    <%- include('../partials/footer.ejs') %>
    <!-- //////////////////////// -->
</body>
</html>