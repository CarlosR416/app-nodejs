<!DOCTYPE html>
<html>
<head>
    <!-- head partial -->
    <%- include('../partials/head.ejs') %>
    <!-- //////////////////////// -->

</head>
<body>
    
    <!-- header partial-->
    <%- include('../partials/header.ejs') %>
    <!-- //////////////////////// -->

    <main id="main">
        <section class="contact mb-5">
          <div class="container" data-aos="fade-up">
    
            <div class="row">
              <div class="col-lg-12 text-center mb-3">
                <h1 class="page-title">Registrar</h1>
              </div>
            </div>
    
            
            <div class="form mt-5">
              <form action="/registro" method="post" role="form" class="php-email-form">
                <div class="row">
                  <div class="form-group">
                    <input type="te/contactanos/mensajext" name="usuario" class="form-control" id="usuario" placeholder="Nombre de Usuario" required>
                  </div>
                  <div class="form-group">
                    <input type="te/contactanos/mensajext" name="nombre" class="form-control" id="nombre" placeholder="Nombre Completo" required>
                  </div>
                  
                  <div class="form-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Ingrese su contraseña" required>
                  </div>
                  <div class="form-group">
                    <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Confime contraseña" required>
                  </div>
                </div>
                <div class="my-3">
                  <div class="loading ">Loading</div>
                  <% errors.forEach(error => {%>

                    <div class="error-message d-block"><%= error.msg %></div>

                  <% }) %>

                  <% success.forEach(msg => {%>

                    <div class="sent-message d-block">msg.msg</div>

                  <% }) %>
                  
                </div>
                <div class="text-center"><button type="submit">Registrar</button></div>

                <div class="text-center my-3"><a href="/ingresar" class="">Iniciar sesion</a></div>
                
              </form>
            </div><!-- End Form -->
    
          </div>
        </section>
    
    </main><!-- End #main -->

    <!-- footer partial-->
    <%- include('../partials/footer.ejs') %>
    <!-- //////////////////////// -->
</body>
</html>